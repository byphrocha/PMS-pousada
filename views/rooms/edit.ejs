<%- include('../partials/header') %>

<h1>Editar Quarto <%= room.number %></h1>

<form action="/api/rooms/<%= room.id %>?_method=PUT" method="post">
  <div>
    <label for="number">Número</label>
    <input id="number" name="number" value="<%= room.number %>" required>
  </div>

  <div>
    <label for="type">Tipo</label>
    <input id="type" name="type" value="<%= room.type %>" required>
  </div>

  <div>
    <label for="price">Preço (R$)</label>
    <input id="price" name="price" type="number" step="0.01" value="<%= room.price %>" required>
  </div>

  <button type="submit">Atualizar</button>
  <a href="/rooms">Cancelar</a>
</form>

<%- include('../partials/footer') %>