<h1>Editar Quarto <%= room.number %></h1>

<form action="/api/rooms/<%= room.id %>?" method="post">
  <label>Nome</label>
  <input name="name" value="<%= room.name %>" required>

  <label>Tipo</label>
  <input name="type" value="<%= room.type %>" required>

  <label>Capacidade</label>
  <input name="capacity"  value="<%= room.capacity %>"  type="number" required>

  <label>Pre√ßo-base (R$)</label>
<input name="basePrice" value="<%= room.basePrice %>" type="number" step="0.01" required>
  <button type="submit">Atualizar</button>
</form>

