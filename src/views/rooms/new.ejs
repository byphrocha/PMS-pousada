<%- include('../partials/header') %>

<h1 class="mb-4">Novo Quarto</h1>

<form action="/api/rooms" method="post" class="col-md-6 mx-auto">

  <div class="form-floating mb-3">
    <input class="form-control" id="name" name="name" placeholder="Nome" required>
    <label for="name">Nome</label>
  </div>

  <div class="form-floating mb-3">
    <input class="form-control" id="type" name="type" placeholder="Tipo" required>
    <label for="type">Tipo</label>
  </div>

  <div class="form-floating mb-3">
    <input class="form-control" id="capacity" name="capacity" type="number" placeholder="Capacidade" required>
    <label for="capacity">Capacidade</label>
  </div>

  <div class="form-floating mb-4">
    <input class="form-control" id="basePrice" name="basePrice" type="number" step="0.01" placeholder="Preço-base" required>
    <label for="basePrice">Preço-base (R$)</label>
  </div>

  <button class="btn btn-primary w-100"><i class="fa-solid fa-save"></i> Salvar</button>
</form>

<%- include('../partials/footer') %>