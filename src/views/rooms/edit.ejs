<%- include('../partials/header') %>

<h1 class="mb-4">Editar Quarto</h1>

<form action="/api/rooms/<%= room.id %>?_method=PUT" method="post" class="col-md-6 mx-auto">

  <div class="form-floating mb-3">
    <input class="form-control" id="name" name="name" value="<%= room.name %>" placeholder="Nome" required>
    <label for="name">Nome</label>
  </div>

  <div class="form-floating mb-3">
    <input class="form-control" id="type" name="type" value="<%= room.type %>" placeholder="Tipo" required>
    <label for="type">Tipo</label>
  </div>

  <div class="form-floating mb-3">
    <input class="form-control" id="capacity" name="capacity" type="number" value="<%= room.capacity %>" placeholder="Capacidade" required>
    <label for="capacity">Capacidade</label>
  </div>

  <div class="form-floating mb-4">
    <input class="form-control" id="basePrice" name="basePrice" type="number" step="0.01" value="<%= room.basePrice %>" placeholder="Preço-base" required>
    <label for="basePrice">Preço-base (R$)</label>
  </div>

  <button class="btn btn-success w-100"><i class="fa-solid fa-check"></i> Atualizar</button>
</form>

<%- include('../partials/footer') %>