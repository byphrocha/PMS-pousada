

<h1 class="h3 mb-3">Clientes</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr><th>#</th><th>Nome</th><th>Email</th><th>Telefone</th></tr>
  </thead>
  <tbody>
    <% customers.forEach(c => { %>
      <tr>
        <td><%= c.id %></td>
        <td><%= c.name %></td>
        <td><%= c.email %></td>
        <td><%= c.phone %></td>
      </tr>
    <% }) %>
  </tbody>
</table>