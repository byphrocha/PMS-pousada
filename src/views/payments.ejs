<%- include('partials/header') %>

<h1 class="h3 mb-3">Pagamentos</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Valor</th>
      <th>Método</th>
      <th>Data</th>
      <th>Referência</th>
    </tr>
  </thead>
  <tbody>
    <% payments.forEach(p => { %>
      <tr>
        <td><%= p.id %></td>
        <td>R$ <%= p.amount.toFixed(2) %></td>
        <td><%= p.method %></td>
        <td><%= new Date(p.paidAt).toLocaleDateString() %></td>
        <td><%= p.reference %></td>
      </tr>
    <% }) %>
  </tbody>
</table>