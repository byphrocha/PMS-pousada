<%- include('partials/header') %>

<h1 class="h3 mb-3">Limpeza</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Quarto</th>
      <th>Status</th>
      <th>Ação</th>
    </tr>
  </thead>
  <tbody>
    <% tasks.forEach(room => { %>
      <tr>
        <td><%= room.id %></td>
        <td><%= room.name %></td>
        <td>
          <span class="badge bg-warning text-dark"><%= room.cleaningStatus %></span>
        </td>
        <td>
          <form
            action="/api/housekeeping/<%= room.id %>/clean?_method=PUT"
            method="post"
            style="display:inline"
          >
            <button class="btn btn-sm btn-success">Marcar como limpo</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<%- include('partials/footer') %>